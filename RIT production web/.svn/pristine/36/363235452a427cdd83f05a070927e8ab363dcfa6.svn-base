/**
 * 	Header styles
 */
#top_header{
	width: 100%;
}

#RIT_block{
	background-color: rgb(247,109,44);
	width: 100%;
	height: 200px;
	min-height: 25%;
}

#search{
	border-radius: 25px;
}

#top_header_content_left h2{
	color: white;
	font-family: Helvetica, Arial, sans-serif;
	font-size: 0.75em;
}
 
#top_header_content_left p{
	font-family: Helvetica, Arial, sans-serif;
	font-size: 0.5em;
	color: white;
}

#top_header_content_right h4{
	font-family: Helvetica, Arial, sans-serif;
	font-family: 0.5em;	
	color: white;
}

/**
 * 	Footer styling
 */
#bottom_footer{
	width: 100%;
	background-color: rgb(34,34,34);
	height: 25%;
}

#RIT_logo{
	float: left;
	display: block;	
}

#footer_menu{
	float: right;
}

#top_footer{
	background-color: rgb(51,51,51);
	width; 100%;
	height: 25%;
	height: 50px;
}

#copyright{
	font-family: "Myraid Pro", Times, serif;
	font-size: 0.75em;
	text-align: left;
	float: left;
}

/**
 * Home styling 
 */

body{
	font-size: 100%;
	margin: 0px;
	padding: 0px;
}

#home_content_bottom{
	background-color: rgb(238,238,238);
}

/#home_content_bottom img{
	display:inline-block;
	width: 30%;
	padding-left: 15px;
}

/**
 * 	Contact us styling
 */
#left_contact{
	width: 50%;
	float:left;
}

#right_contact{
	width: 50%;
	float: right;
}
