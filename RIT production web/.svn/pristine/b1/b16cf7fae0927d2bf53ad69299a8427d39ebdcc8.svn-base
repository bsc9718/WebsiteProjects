body{
	height: 100%;
	margin: 0px;
	padding: 0px;
	width: 100%;
}

/**
 * 	Home styling
 */
#home_content_top{
	width: 100%;
	height: 450px;
	display: inline-block;
}

#left_column{
	display: inline-block;
	float: left;
	width: 20%;
	height: 80%;
	margin-left: 5%;
	margin-top: 2%;
	margin-right: 2%;
	overflow: hidden;
}

#left_column h3{
	color: rgb(247,109,44);
	font-family: Helvetica, Arial, sans-serif;
	font-size: 1.5em;
}

#left_column p{
	font-family: Helvetica, Arial, sans-serif;
	font-size: 1em;
}

#middle_column{
	display: inline-block;
	float: left;
	width: 20%;
	height: 80%;
	margin-top: 5%;
	margin-right: 2%;
	overflow: hidden;
}

#right_column{
	display: inline-block;
	width: 20%;
	float: left;
	background-color: rgb(243,243,243);
	height: 80%;
	margin-top: 5%;
	overflow: hidden;
}

#home_content_bottom{
	background-color: rgb(238,238,238);
}

/**
 * 	contact us styling
 */

#contact_content{
	height: 450px;
	width: 100%;
	display: inline-block;
}

#left_contact{
	display: block;
	width: 48%;
	height: 100%;
	float: left;
}

#left_content{
	float: right;
	margin-right: 15%;
	margin-top: 5%;
	display: inline-block;
}

#left_content p{
	font-family: Helvetica, Arial, sans-serif;
}

#left_image{
	display: inline;
}

#left_image img{
	height: 70%;
	width: 30%;
	margin-left: 15%;
	margin-top: 8%;
}

#right_image{
	display: inline;
}

#right_image img{
	height: 70%;
	width: 30%;
	margin-left: 15%;
	margin-top: 8%;
}

#right_content{
	float: right;
	margin-right: 20%;
	margin-top: 5%;
	display: inline-block;
}

#right_content p{
	font-family: Helvetica, Arial, sans-serif;
}

#right_contact{
	display: block;
	width: 48%;
	height: 100%;
	float: right;
}
